  <script>
    // Layer data
    const layerData = {
      applications: {
        title: "Flexible",
        titleSpan: "Applications",
        icon: "üì±",
        iconBg: "linear-gradient(135deg, #00c4cc, #00e5ff)",
        desc: "Our white-label telematics applications for web and mobile are fully customizable, allowing you to brand and deploy solutions quickly. From driver behavior monitoring to real-time fleet tracking, these applications integrate seamlessly with our cloud services and provide end-users with intuitive, powerful tools.",
        features: [
          { number: "50+", label: "Pre-built Features" },
          { number: "30%", label: "Faster Deployment" },
          { number: "24/7", label: "Mobile Access" }
        ]
      },
      cloud: {
        title: "Cloud-to-Cloud",
        titleSpan: "Services",
        icon: "‚òÅÔ∏è",
        iconBg: "linear-gradient(135deg, #00a5a8, #00c4c7)",
        desc: "Our pre-integrated cloud platform connects effortlessly to your existing infrastructure and third-party services. Leverage powerful APIs, webhooks, and data pipelines to create seamless integrations without complex development cycles. Scale with confidence using our enterprise-grade infrastructure.",
        features: [
          { number: "99.9%", label: "Uptime SLA" },
          { number: "100+", label: "API Endpoints" },
          { number: "1B+", label: "Daily Events" }
        ]
      },
      edge: {
        title: "Edge",
        titleSpan: "Devices",
        icon: "üì°",
        iconBg: "linear-gradient(135deg, #4a90a4, #5ba3b8)",
        desc: "Our highly programmable IoT devices support a wide range of use cases‚Äîfrom vehicle tracking and asset monitoring to sensor integration. Built for durability and reliable connectivity, these devices form the foundation of your telematics solution with industry-leading hardware quality.",
        features: [
          { number: "15+", label: "Device Models" },
          { number: "5G", label: "Ready" },
          { number: "IP67", label: "Durability" }
        ]
      }
    };

    // Hide loader
    window.addEventListener('load', () => {
      setTimeout(() => {
        document.getElementById('loader').classList.add('hidden');
        initAnimations();
      }, 800);
    });

    // Initialize animations
    function initAnimations() {
      // Animate layers
      document.querySelectorAll('.layer').forEach((layer, index) => {
        setTimeout(() => {
          layer.classList.add('visible');
        }, 300 + (index * 250));
      });

      // Animate value panel
      setTimeout(() => {
        document.querySelector('.value-panel').classList.add('visible');
        
        document.querySelectorAll('.value-item').forEach((item, index) => {
          setTimeout(() => {
            item.classList.add('visible');
          }, index * 120);
        });
      }, 900);

      // Animate CTA
      setTimeout(() => {
        document.querySelector('.cta-section').classList.add('visible');
      }, 1400);
    }

    // Layer click handlers
    document.querySelectorAll('.layer').forEach(layer => {
      layer.addEventListener('click', () => {
        const layerKey = layer.dataset.layer;
        const data = layerData[layerKey];

        // Update modal content
        document.getElementById('modalIcon').textContent = data.icon;
        document.getElementById('modalIcon').style.background = data.iconBg;
        document.getElementById('modalTitle').innerHTML = `${data.title} <span>${data.titleSpan}</span>`;
        document.getElementById('modalDesc').textContent = data.desc;

        const featuresHtml = data.features.map(f => `
          <div class="modal-feature">
            <div class="number">${f.number}</div>
            <div class="label">${f.label}</div>
          </div>
        `).join('');
        document.getElementById('modalFeatures').innerHTML = featuresHtml;

        // Open modal
        document.getElementById('detailOverlay').classList.add('open');
        document.getElementById('detailModal').classList.add('open');
      });
    });

    function closeModal() {
      document.getElementById('detailOverlay').classList.remove('open');
      document.getElementById('detailModal').classList.remove('open');
    }

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
    });

    // Parallax effect on mouse move
    document.addEventListener('mousemove', (e) => {
      const x = (e.clientX / window.innerWidth - 0.5) * 20;
      const y = (e.clientY / window.innerHeight - 0.5) * 20;

      document.querySelectorAll('.orb').forEach((orb, index) => {
        const factor = (index + 1) * 0.5;
        orb.style.transform = `translate(${x * factor}px, ${y * factor}px)`;
      });
    });
  </script>


</body></html>
